{
    "compilerOptions": {
      "target": "es6",                          
      "module": "commonjs",                    
      "lib": ["es6"],
      "moduleResolution": "node",                     
      "allowJs": true,
      "outDir": "./dist",                          
      "rootDir": ".",
      "strict": true,         
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    }
}